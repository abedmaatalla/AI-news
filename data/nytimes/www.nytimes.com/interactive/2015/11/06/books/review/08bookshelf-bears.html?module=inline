nt-style:normal;font-family:"nyt-cheltenham",georgia,"times new roman",times,serif;color:#333;margin-bottom:3px}.list_items .media .interactive-leadin,.viewport-medium .list_items .media .interactive-leadin{font-size:14px;line-height:18px;font-weight:400;font-style:normal;font-family:"nyt-cheltenham-sh",georgia,"times new roman",times,serif;color:#666;margin-bottom:10px}.list_items .media .interactive-credit,.list_items .media .interactive-notes,.viewport-medium .list_items .media .interactive-credit,.viewport-medium .list_items .media .interactive-notes{font-size:12px;line-height:14px;font-weight:300;font-style:normal;font-family:"nyt-franklin",arial,helvetica,sans-serif;color:#999;margin-top:8px}
