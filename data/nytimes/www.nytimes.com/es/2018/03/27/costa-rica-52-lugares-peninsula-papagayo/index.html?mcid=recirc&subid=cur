<script>
require(['foundation/main'], function () {
    
        require(['article/main']);

        require(['jquery/nyt'], function ($) {
            window.onYouTubeIframeAPIReady = function () {
                $(document).trigger('nyt:youtube-iframe-api-ready');
            };
        });
    
    
    require(['jquery/nyt', 'foundation/views/page-manager'], function ($, pageManager) {
        var hasPlayPause = $('.vhs-plugin-imax-cover-metadata-play-pause').length;

        $(document).ready(function () {
            if (window.location.search.indexOf('disable_tagx') > 0) {
                return;
            }

            require(['https://a1.nyt.com/analytics/json-kidd.min.js'], function () {
                pageManager.trackingFireEventQueue();
            });
        });

        function loadVHSStyles() {
            require(['vhs'], function (vhs) {
                var deferred, link;

                deferred = $.Deferred();

                link         = document.createElement('link');
                link.id      = 'intl-vhs-css';
                link.rel     = 'stylesheet';
                link.href    = ['https://static01.nyt.com/video/vhs/', vhs._version, '-', vhs._release, '/vhs.css'].join('');
                link.onload  = deferred.resolve;
                link.onerror = deferred.reject;

                deferred.done(function () {
                    $('.intl-video-play-button').show();
                });

                document.head.appendChild(link);
            });
        }

        $(document).ready(function () {
            if (hasPlayPause) {
                loadVHSStyles();
            }

            $('.load-more-button, .search-tab').one('click', function () {
                if (! document.getElementById('intl-vhs-css')) {
                    loadVHSStyles();
                }
            });
        });
    });
    require(['jquery/nyt', 'foundation/views/page-manager'], function ($, pageManager) {
        if (document.getElementById('branding-heading-link')) {
            if ('masthead-theme-standard' === 'masthead-theme-transparent-ffffff') {
                var setLightBrandingForViewport = function() {
                    $('#branding-heading-link').find('svg, img').remove();

                    if (
                        window.magnum.getViewportInteger() >= 1010
                        || $('html').hasClass('intl-force-theme-transparent-ffffff')
                    ) {
                        window.magnum.writeLogo('small', 'https://a1.nyt.com/assets/shell/20160613-034030/images/foundation/logos/', '', 'masthead-theme-standard', '', 'branding-heading-link');
                    } else {
                        window.magnum.writeLogo('small', 'https://a1.nyt.com/assets/shell/20160613-034030/images/foundation/logos/', '', '', '', 'branding-heading-link');
                    }
                };

                setLightBrandingForViewport();
                pageManager.on('nyt:page-resize-after', setLightBrandingForViewport);
            } else {
                
                window.magnum.writeLogo('small', 'https://a1.nyt.com/assets/shell/20160613-034030/images/foundation/logos/', '', '', '', 'branding-heading-link');
            }
        }

        if (document.getElementById('mini-navigation-branding-heading-link'))  {
            window.magnum.writeLogo('small', 'https://a1.nyt.com/assets/shell/20160613-034030/images/foundation/logos/', '', 'masthead-theme-standard', '', 'mini-navigation-branding-heading-link');
        }

        if (document.getElementById('site-index-branding-link')) {
            window.magnum.writeLogo('small', 'https://a1.nyt.com/assets/shell/20160613-034030/images/foundation/logos/', '', '', '', 'site-index-branding-link');
        }
    });
});
</script>
