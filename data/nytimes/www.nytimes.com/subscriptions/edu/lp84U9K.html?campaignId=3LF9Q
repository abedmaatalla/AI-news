    <script>
        

        $(document).ready(function () {
            var params = unescape(window.location.search.replace('?', '&').replace(/OC=\d+&/, ''));
            var url_checkout = 'https://myaccount.nytimes.com/gst/purchase_gc.html';

            var target = url_checkout; 
            
            var data = {}; //data is top level object

            var url_checkout = '';
            data.basic = {}; //
            data.basic.l1 = {};
            data.basic.l1.sale = '143.00';
            data.basic.l1.reg = '195.00';
            data.basic.l1.oc = '20000059220';
            data.basic.l4 = {};
            data.basic.l4.sale = '399.00';
            data.basic.l4.reg = '780.00';
            data.basic.l4.oc = '20000059280';

            data.ada = {};
            data.ada.l1 = {};
            data.ada.l1.sale = '195.00';
            data.ada.l1.reg = '325.00';
            data.ada.l1.oc = '20000058840';
            data.ada.l4 = {};
            data.ada.l4.sale = '599.00';
            data.ada.l4.reg = '1300.00';
            data.ada.l4.oc = '20000059320';

            data.hd = {};
            data.hd.l1 = {};
            data.hd.l4 = {};
            
            $('#step1 button').on("click", function () {
                $('#step1 button.active').removeClass('active');
                $(this).addClass('active');
                var len = $(this).data('len');
                var timeUnit = $(this).data('unit');
                $('.num-weeks').html(len +" "+ timeUnit);
                
                
                if(len=="4"){
                    $(".hdBundle").hide();
                    $("#step2").addClass("two_bundles");
                    $(".displacimer_bundle").show();
                }else{
                    $(".hdBundle").show();
                    $("#step2").removeClass("two_bundles");
                    $(".displacimer_bundle").hide();
                }

                $('div.productbox').each(function () { //smart, tablet, ada
                    var continue_target = ''; 
                    if($(this).hasClass("hdBundle")) {
                        //find cta and give CMP = 
                        continue_target = 'https://www.nytimes.com/subscription/hd/363.html?campaignId='+getParameterByName("campaignId"); 
                       
                    } else {
                        var prod = $(this).attr("data-prod");
                        $(this).find('.sale').html(data[prod]["l"+len]['sale'])  //set value of sale price
                        $(this).find('.reg').html(data[prod]["l"+len]['reg'])  //set value of reg price
                        var continue_target = target +'?OC=' + data[prod]["l"+len]['oc']+'&campaignId='+getParameterByName("campaignId");
                        
                    }

                    $(this).find('a.cta').attr('href', continue_target);


                    $(this).off().on('click', function () {

                        if ($(window).width()<640) {
                            setTimeout(goToURL(continue_target), 100);
                           
                        }

                    })



                    function goToURL(url) {
                        window.location.href = url;
                    }

                })

            })

            $('#step1 button:first').click();


        });
    </script>
