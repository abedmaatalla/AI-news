 reveals the apps to delete right now","url":"https:\u002F\u002Fwww.foxnews.com\u002Ftech\u002Fbad-iphone-battery-life-this-easy-trick-reveals-the-apps-to-delete-right-now","category":{},"duration":"","isVideo":false}],"searchCriteria":{"showCategory":false,"feedUrl":"http:\u002F\u002Fprivate.api.foxnews.com\u002Fproxy\u002Fcontent\u002Fv2?q=section_path:fnc\u002Ftech&sort=popular&api_key=53732e64-ce40-401e-b51e-dcbd1cebe6be","isFeedUrl":true,"fixedArticles":[],"offset":0,"searchCriteria":"No Criteria","editable":true,"showTime":false,"articlesQuantity":4,"title":"Trending in Tech","isTag":false,"searchSelected":"","metaPosition":"","buttonLabel":"","showSource":false,"showDescription":false,"pillsPosition":"","isCategory":false,"size":5,"fetchMore":false,"buttonLink":"","isKeyword":false,"isFixed":false,"showHero":false},"hasMore":false,"hasCategory":false,"buttonLabel":"","buttonLink":""}},{"is":"ad","props":{"id":"","device":"desktop","sizes":["300x251"],"showAdvertText":true,"loadInView":false,"advertisementText":"ADVERTISEMENT"}},{"is":"placement","props":{"uid":"ar-11"}}],"postContent":[]}},"LiveEventPages":{"id":"","title":"","description":"","rawData":null},"OffsetManager":{"offsetData":{}},"Persons":{"persons":[],"person":{},"personArticles":[],"personComponents":[]},"Shows":{"shows":[],"show":{},"articles":[],"persons":[],"tag":"","fetchCount":1,"showByUrl":{}},"StaticPages":{"title":"","description":"","components":[],"scripts":[],"stylesheets":[],"metadata":{}},"Tags":{"tag":{}}},"serverRendered":true};</script><script src="/_wzln/manifest.1ba8cac4066dd1ab1179.js" defer></script><script src="/_wzln/vendor.1bfed0e1e694779fcbf4.js" defer></script><script src="/_wzln/app.7e989486cda3b6ff96c9.js" defer></script>
